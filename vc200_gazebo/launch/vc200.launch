<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <!-- Load joint controller configurations from YAML file to parameter server -->
    <arg name="robot_name" default="vc200" />

    <arg name="model" default="$(find vc200_description)/urdf/vc200.gazebo.xacro" />
    <!-- <arg name="model" default="$(find vc200_description)/urdf/test.xacro" /> -->

    <arg name="paused" default="false" />
    <arg name="use_sim_time" default="true" />
    <arg name="gui" default="true" />
    <arg name="headless" default="false" />
    <arg name="debug" default="false" />
    <arg name="gui_required" default="true" />
    <arg name="mesh_enabled" default="true" />


    <arg name="robot_namespace" default="/" />

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="$(arg paused)" />
        <arg name="use_sim_time" value="$(arg use_sim_time)" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="headless" value="$(arg headless)" />
        <arg name="debug" value="$(arg debug)" />
        <arg name="verbose" default="false" />
        <arg name="gui_required" value="$(arg gui_required)" />

    </include>
    <rosparam file="$(find vc200_gazebo)/cfg/pid.yaml" command="load" ns="" />
    <group ns="$(arg robot_namespace)">

        <param name="robot_description" command="$(find xacro)/xacro '$(find vc200_description)/urdf/vc200.gazebo.xacro'
        --inorder" />

        <node name="vc200_spawn" pkg="gazebo_ros" type="spawn_model" output="screen" args="
        -urdf 
        -param robot_description 
        -model $(arg robot_name)"/> 

        <rosparam command="load" file="$(find vc200_controller)/cfg/controllers.yaml" subst_value="true"/>
        
        <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" output="screen"></node>
        <!-- <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher" output="screen"></node> -->

        <!-- <node name="base_controller_spawner" pkg="controller_manager" type="spawner" args="joint_state_controller diff_drive" /> -->



    </group>

</launch>
